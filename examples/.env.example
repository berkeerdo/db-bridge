# DB-Bridge Examples Environment Variables
# Copy this file to .env and update with your values

# MySQL Configuration
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=
DB_MYSQL_DATABASE=test_db

# PostgreSQL Configuration  
DB_PG_HOST=localhost
DB_PG_PORT=5432
DB_PG_USER=postgres
DB_PG_PASSWORD=
DB_PG_DATABASE=test_db

# Redis Configuration
DB_REDIS_HOST=localhost
DB_REDIS_PORT=6379
DB_REDIS_PASSWORD=

# Encryption
DB_BRIDGE_ENCRYPTION_KEY=your-32-character-encryption-key-here
ENABLE_ENCRYPTION=false

# Database Type for examples (mysql or postgresql)
DB_TYPE=mysql

# Connection Pool
DB_POOL_SIZE=20
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=10000

# Environment
NODE_ENV=development